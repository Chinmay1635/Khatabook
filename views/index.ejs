<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khaatabook</title>
    <link rel="stylesheet" href="/stylesheets/index.css">

    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
    rel="stylesheet"/>

</head>
<body>
    <div id="cover"></div>
   <div id="main">
  
        <!-- page no. 1 -->
         <div id="page1">
                <!-- navbar -->
                <nav>
                    <div id="left">
                        <a href="#"><img src="/images/logo.png" alt=""></a>
                        <div id="title">Today's <em>saving</em> is tommarow's <em>earning</em></div>
                    </div>
                    <div id="right">
                        <a href="http://localhost:3000/">Home</a>
                        <a href="http://localhost:3000/createnew">Create new Expenses</a>
                    </div>
                </nav>
                <!-- main section -->
                
                 <div id="expenses">
                    <a href="http://localhost:3000/createnew"><div id="create" class="btn">Create New Expense</div></a>
                 </div>
                 <div id="data">
                    <% files.forEach(function(file){%>
                        <div id="delete-alert">
                            <h3>Are you sure, you want to delete this expense?</h3>
                            <a id="yes" href="http://localhost:3000/delete/<%= file %>">Yes</a>
                            <a id="no" href="http://localhost:3000/">No</a>
                        </div>
                        <div class="data">
                            <h3><%=file%></h3>
                            <div id="right">
                                <a href="http://localhost:3000/edit/<%= file %>">View</a>
                                <a href="http://localhost:3000/edit/<%= file %>"><i class="ri-edit-2-fill"></i></a>
                                <a class="delete" id="delete" href="#"><i class="ri-delete-bin-fill"></i></a>
                            </div>
                        </div>
                    <%})  %>
                 </div>
         </div>
   </div>

   <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
   <script src="/javascript/index.js"></script>
</body>
</html>